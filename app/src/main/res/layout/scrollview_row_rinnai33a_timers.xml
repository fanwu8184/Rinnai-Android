<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/framelayout_timersa_dlrowheight"
        android:background="#ffcc0000">

        <TextView
            android:id="@+id/textView67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible" />

        <TextView
            android:layout_width="@dimen/textview_timersa_dlrowwidth"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textview_timersa_delete_textsize" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/timerrow_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/framelayout_timersa_tlrowheight">

        <TextView
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="250"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="830"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="250"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="225"
                        android:background="#19FFFFFF"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:orientation="vertical"></LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="780"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView59"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:gravity="left|center|start"
                                    android:text="On:"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/textview_timersa_on_textsize"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView33"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="left|center|start"
                                    android:text="1:06 PM"
                                    android:textColor="#FFC0C0C0"
                                    android:textSize="@dimen/textview_timersa_on_textsize" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:orientation="vertical"></LinearLayout>

                                <TextView
                                    android:id="@+id/textView60"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:gravity="left|center|start"
                                    android:text="Off:"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/textview_timersa_off_textsize"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView34"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="left|center|start"
                                    android:text="1:20 PM"
                                    android:textColor="#FFC0C0C0"
                                    android:textSize="@dimen/textview_timersa_off_textsize" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView61"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2.25"
                                    android:gravity="left|center|start"
                                    android:text="Days:"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/textview_timersa_days_textsize"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView32"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="9.75"
                                    android:gravity="left|center|start"
                                    android:text="Mon Tue Wed Thur Fri Sat Sun"
                                    android:textColor="#FFC0C0C0"
                                    android:textSize="@dimen/textview_timersa_days_textsize" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView62"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5.5"
                                    android:gravity="left|center|start"
                                    android:text="Temperature:"
                                    android:textColor="#FFFFFF"
                                    android:textSize="@dimen/textview_timersa_temp_textsize"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView31"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6.5"
                                    android:gravity="left|center|start"
                                    android:text="24&#xb0;"
                                    android:textColor="#FFC0C0C0"
                                    android:textSize="@dimen/textview_timersa_temp_textsize" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="250"
                            android:orientation="vertical">

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/switch3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:scaleX="@dimen/switch3_timers_scalex"
                                android:scaleY="@dimen/switch3_timers_scaley" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="25"
                        android:background="#00000000"
                        android:orientation="horizontal"></LinearLayout>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>