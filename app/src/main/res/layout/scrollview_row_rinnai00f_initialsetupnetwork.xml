<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearlayout_network_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="150"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView167"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Name"
            android:textColor="#FFC0C0C0"
            android:textSize="@dimen/textview_network_name_textsize" />

        <TextView
            android:id="@+id/textView168"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SignalStrength"
            android:textColor="#FFC0C0C0"
            android:textSize="@dimen/textview_network_signalstrength_textsize"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView169"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SecurityType"
            android:textColor="#FFC0C0C0"
            android:textSize="@dimen/textview_network_securitytype_textsize" />

    </LinearLayout>

</LinearLayout>